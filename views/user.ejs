<%-  include('partials/head.ejs') %> 
<%-  include('partials/header.ejs') %> 

    <% let queryUserEdit = editUser %>
    <% let className = validationsError ? 'errorMessage' : 'errorMessageHidden' %>
    <div class="newUserBox">
        <div class="newUserTitle">
            <h2>Bienvenido a la <span>COMUNIDAD COCINERA</span></h2>
        </div>
        <div class="newUserTitleButton">
            <% if (editUser === false) { %>
                <a href="/editar-usuario" ><p>Editar perfil</p></a>
            <% } else { %>
                <a href="/confirmacion-eliminar-usuario"><p>Eliminar</p></a>
                <a href="/usuario"><p>Cancelar</p></a>
            <% } %>

        </div>
        <div class=<%= className %>>
            <p><%= validationsError.message %></p>
        </div>
        <form action="/nuevo-usuario?edit=<%= queryUserEdit %>" method="POST">
            <div>
                <label for="eMail" >Correo electrónico:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.eMail %></h3>
                <% } else { %>
                    <h3><%= userProfile.eMail %></h3>
                <% } %>       
            </div>
            <div>
                <label for="password" >Password:</label>
                <% if (editUser === false) { %> 
                    <p>******</p>
                <% } else { %>
                    <p>******</p>
                <% } %>    
            </div>
            <div>
                <label for="firstName" >Nombre:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.firstName %></h3>
                <% } else { %>
                    <input type="text" name="firstName" id="firstName" required value="<%= userProfile.firstName %>"/>
                <% } %>    
            </div>  
            <div>
                <label for="lastName" >Apellido:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.lastName %></h3>
                <% } else { %>
                    <input type="text" name="lastName" id="lastName" required value="<%= userProfile.lastName %>"/>
                <% } %>    
            </div>
            <div>
                <label for="photo" >Avatar URL:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.photo.slice(0, 25) %>...</h3>
                <% } else { %>
                    <input type="text" name="photo" id="photo" required value="<%= userProfile.photo %>"/>
                <% } %>    
            </div>
            <div class="newUserSelect"> 
                <label for="job" >A que te dedicas:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.job %></h3>
                <% } else { %>
                    <select name="job" >
                        <option value="<%= userProfile.job %>"><%= userProfile.job %></option>
                        <option value="Cocinero profesional">Cocinero profesional</option>
                        <option value="Cocinero eventual">Cocinero eventual</option>
                        <option value="Cocinero en casa">Cocinero en casa</option>
                        <option value="Aficionado a la cocina">Aficionado a la cocina</option>
                        <option value="Cocino para alimentarme">Cocino para alimentarme</option>
                        <option value="Nunca cociné">Nunca cociné</option>
                    </select>
                <% } %>    
                </div>
            <div class="newUserSelect">
                <label for="country" >¿De donde eres?:</label>
                <% if (editUser === false) { %> 
                    <h3><%= userProfile.country %></h3>
                <% } else { %>
                    <select name="country">
                        <option value="<%= userProfile.country %>"><%= userProfile.country %></option>
                        <option value="Argentina">Argentina</option>
                        <option value="Venezuela">Venezuea</option>
                    </select>
                <% } %>    
                </div>
            <% if (editUser === false) { %>
                <div></div>
            <% } else { %>
                <div class="newUserButton">
                    <input type="submit" value="Enviar" />
                </div>
            <% } %>
            </form>
    </div>
   
<%-  include('partials/footer.ejs') %> 