<%-  include('partials/head.ejs') %> 
<%-  include('partials/header.ejs') %> 

        <div class="newUserBox">
            <div class="newUserTitle">
                <h2>Bienvenido a la <span>COMUNIDAD COCINERA</span></h2>
            </div>
            <div>
                <a href="/editar-usuario/<%= userProfile._id %>" ><button>Editar perfil</button></a>
            </div>
            <form action="/editar-usuario" method="POST">
                <div>
                    <label for="eMail" >Correo electrónico:</label>
                    <% if (editUser === false) { %> 
                        <h3><%= userProfile.eMail %></h3>
                    <% } else { %>
                        <input type="text" name="eMail" id="eMail" required value="<%= editUser.eMail %>"/>
                    <% } %>    
                </div>
                <div>
                    <label for="password" >Password:</label>
                    <% if (editUser === false) { %> 
                        <h3>******</h3>
                    <% } else { %>
                        <input type="password" name="password" id="password" required value="<%= editUser.password %>"/>
                    <% } %>    
                </div>
                <div>
                    <label for="name" >Nombre:</label>
                    <h3><%= userProfile.name %></h3>
                    <!-- <input type="text" name="name" id="name" required/> -->
                </div>  
                <div>
                    <label for="lastName" >Apellido:</label>
                    <h3><%= userProfile.lastName %></h3>
                    <!-- <input type="text" name="lastName" id="lastName" required/> -->
                </div>
                <div>
                    <label for="photo" >Avatar URL:</label>
                    <h3><%= userProfile.photo %></h3>
                    <!-- <input type="text" name="photo" id="photo" required/> -->
                </div>
                <div class="newUserSelect"> 
                    <label for="job" >A que te dedicas:</label>
                    <h3><%= userProfile.job %></h3>
                    <!-- <select name="job" >
                        <option value="">Elíge una profesión</option>
                        <option value="Cocinero profesional">Cocinero profesional</option>
                        <option value="Cocinero eventual">Cocinero eventual</option>
                        <option value="Cocinero en casa">Cocinero en casa</option>
                        <option value="Aficionado a la cocina">Aficionado a la cocina</option>
                        <option value="Cocino para alimentarme">Cocino para alimentarme</option>
                        <option value="Nunca cociné">Nunca cociné</option>
                    </select> -->
                </div>
                <div class="newUserSelect">
                    <label for="country" >¿De donde eres?:</label>
                    <h3><%= userProfile.country %></h3>
                    <!-- <select name="country">
                        <option value="">Elíge un país</option>
                        <option value="Argentina">Argentina</option>
                        <option value="Venezuela">Venezuea</option>
                    </select> -->
                </div>
                <% if (editUser === false) { %>
                    <div></div>
                <% } else { %>
                    <div class="newUserButton">
                        <input type="submit" value="send" />
                    </div>
                <% } %>
             </form>
        </div>
   
<%-  include('partials/footer.ejs') %> 